<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/login.css">
</head>
<body>
    
    <%- include('../includes/header.ejs') %>

    <main class="main">
        <section class="login-section">
            <form action="/register" method="post" class="register-form">
                <div class="input-container">
                    <p class="login-p">Email : </p> <input type="text" name="email" class="login-input">
                </div>
                <div class="input-container">
                    <p class="login-p">Username : </p> <input type="text" name="username" class="login-input">
                </div>
                <div class="input-container">
                    <p class="login-p">Password : </p> <input type="text" name="password" class="login-input">
                </div>
                <div class="input-container">
                    <p class="login-p">Confirm password : </p> <input type="text" name="confirm_password" class="login-input">
                </div>
                <div class="button-container">
                    <button type="submit" class="login-submit-button">Sign Up</button>
                </div>
            </form>
        </section>
    </main>

</body>
</html>